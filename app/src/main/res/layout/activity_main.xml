<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <Button
            android:id="@+id/btnMain01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="mOnClick"
            android:text="@string/main_title" />

        <Button
            android:id="@+id/btnMain02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="mOnClick"
            android:text="@string/main_title02" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#ffff00"
            android:gravity="center_horizontal|center_vertical"
            android:text="Layout" />

        <Button
            android:id="@+id/btmMain03"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="mOnClick"
            android:text="@string/main_title03"
            android:textAllCaps="false" />


        <Button
            android:id="@+id/btmMain04"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="mOnClick"
            android:text="@string/main_title04"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btmMain05"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="mOnClick"
            android:text="FrameLayout"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btmMain06"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="mOnClick"
            android:text="TabHost"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btmMain07"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="mOnClick"
            android:text="Table,GridLayout"
            android:textAllCaps="false" />

        <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#ffff00"
        android:gravity="center_horizontal|center_vertical"
        android:text="알림 효과 - 진동,효과음" />

        <Button
            android:id="@+id/btmMain08"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="mOnClick"
            android:text="@string/main_title08"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btmMain09"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="mOnClick"
            android:text="@string/main_title09"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btmMain10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="mOnClick"
            android:text="2018-04-20/과제"
            android:textAllCaps="false" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#ffff00"
            android:gravity="center_horizontal|center_vertical"
            android:text="이벤트 처리" />

        <Button
            android:id="@+id/btmMain11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="mOnClick"
            android:text="델리게이션 이벤트"
            android:textAllCaps="false" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#ffff00"
            android:gravity="center_horizontal|center_vertical"
            android:text="리소스 활용" />

        <Button
            android:id="@+id/btmMain12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="mOnClick"
            android:text="리소스 활용"
            android:textAllCaps="false" />
        <Button
            android:id="@+id/btmMain13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="mOnClick"
            android:text="언어 설정"
            android:textAllCaps="false" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#ffff00"
            android:gravity="center_horizontal|center_vertical"
            android:text="도전과제" />

        <Button
            android:id="@+id/btmMain14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="mOnClick"
            android:text="도전과제01"
            android:textAllCaps="false" />
        <Button
            android:id="@+id/btmMain15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="mOnClick"
            android:text="도전과제02"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btmMain16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="mOnClick"
            android:text="도전과제03"
            android:textAllCaps="false" />
    </LinearLayout>
</ScrollView>